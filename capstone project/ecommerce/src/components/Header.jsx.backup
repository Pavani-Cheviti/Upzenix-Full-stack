import { useState } from 'react';
import { Link, useNavigate } from 'react-router-dom';
import { ShoppingCart, Sun, Moon, Search, Menu, X } from 'lucide-react';
import useCartStore from '../stores/cartStore';
import useThemeStore from '../stores/themeStore';
import { categories } from '../data/categories';

const Header = () => {
  const { getItemCount } = useCartStore();
  const { theme, toggleTheme } = useThemeStore();
  const navigate = useNavigate();
  const [searchTerm, setSearchTerm] = useState('');
  const [selectedCategory, setSelectedCategory] = useState('');
  const [isMobileMenuOpen, setIsMobileMenuOpen] = useState(false);

  const handleSearch = (e) => {
    e.preventDefault();
    if (searchTerm.trim()) {
      navigate(`/?search=${encodeURIComponent(searchTerm)}&category=${selectedCategory}`);
      setSearchTerm('');
    }
  };

  return (
    <header className="bg-white dark:bg-neutral-900 shadow-soft border-b border-neutral-200 dark:border-neutral-800 sticky top-0 z-50">
      {/* Main header */}
      <div className="container mx-auto px-4 lg:px-6">
        <div className="flex items-center justify-between h-16">
          {/* Logo */}
          <Link to="/" className="flex items-center gap-2 flex-shrink-0">
            <div className="text-2xl font-bold text-primary-600 dark:text-primary-400">
              ShopHub
            </div>
          </Link>

          {/* Desktop Search Bar */}
          <form onSubmit={handleSearch} className="hidden md:flex flex-1 max-w-lg mx-8">
            <div className="flex flex-1">
              <select
                value={selectedCategory}
                onChange={(e) => setSelectedCategory(e.target.value)}
                className="px-4 py-3 bg-neutral-100 dark:bg-neutral-800 border border-neutral-200 dark:border-neutral-700 rounded-l-xl text-sm focus:outline-none focus:ring-2 focus:ring-primary-500"
              >
                <option value="">All Categories</option>
                {Object.keys(categories).map(categoryKey => (
                  <option key={categoryKey} value={categoryKey}>
                    {categories[categoryKey].name}
                  </option>
                ))}
              </select>
              <input
                type="text"
                placeholder="Search products..."
                value={searchTerm}
                onChange={(e) => setSearchTerm(e.target.value)}
                className="flex-1 px-4 py-3 border-t border-b border-r border-neutral-200 dark:border-neutral-700 focus:outline-none dark:bg-neutral-800 dark:text-neutral-100"
              />
              <button
                type="submit"
                className="px-6 py-3 bg-primary-600 hover:bg-primary-700 text-white rounded-r-xl transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-primary-500"
              >
                <Search size={20} />
              </button>
            </div>
          </form>

          {/* Right side actions */}
          <div className="flex items-center gap-4">
            {/* Theme toggle */}
            <button
              onClick={toggleTheme}
              className="p-2 rounded-xl text-neutral-600 dark:text-neutral-400 hover:bg-neutral-100 dark:hover:bg-neutral-800 transition-colors duration-200"
            >
              {theme === 'light' ? <Moon size={20} /> : <Sun size={20} />}
            </button>

            {/* Cart */}
            <Link
              to="/cart"
              className="relative p-2 rounded-xl text-neutral-600 dark:text-neutral-400 hover:bg-neutral-100 dark:hover:bg-neutral-800 transition-colors duration-200"
            >
              <ShoppingCart size={24} />
              {getItemCount() > 0 && (
                <span className="absolute -top-1 -right-1 bg-accent-500 text-white text-xs font-bold rounded-full h-5 w-5 flex items-center justify-center">
                  {getItemCount()}
                </span>
              )}
            </Link>

            {/* Mobile menu toggle */}
            <button
              onClick={() => setIsMobileMenuOpen(!isMobileMenuOpen)}
              className="md:hidden p-2 rounded-xl text-neutral-600 dark:text-neutral-400 hover:bg-neutral-100 dark:hover:bg-neutral-800 transition-colors duration-200"
            >
              {isMobileMenuOpen ? <X size={24} /> : <Menu size={24} />}
            </button>
          </div>
        </div>

        {/* Mobile Search Bar */}
        <form onSubmit={handleSearch} className="md:hidden pb-4">
          <div className="flex">
            <select
              value={selectedCategory}
              onChange={(e) => setSelectedCategory(e.target.value)}
              className="px-3 py-2 bg-neutral-100 dark:bg-neutral-800 border border-neutral-200 dark:border-neutral-700 rounded-l-xl text-sm"
            >
              <option value="">All</option>
              {Object.keys(categories).map(categoryKey => (
                <option key={categoryKey} value={categoryKey}>
                  {categories[categoryKey].name}
                </option>
              ))}
            </select>
            <input
              type="text"
              placeholder="Search products..."
              value={searchTerm}
              onChange={(e) => setSearchTerm(e.target.value)}
              className="flex-1 px-3 py-2 border-t border-b border-r border-neutral-200 dark:border-neutral-700 focus:outline-none dark:bg-neutral-800 dark:text-neutral-100"
            />
            <button
              type="submit"
              className="px-4 py-2 bg-primary-600 hover:bg-primary-700 text-white rounded-r-xl"
            >
              <Search size={18} />
            </button>
          </div>
        </form>

        {/* Mobile Menu */}
        {isMobileMenuOpen && (
          <div className="md:hidden py-4 border-t border-neutral-200 dark:border-neutral-700">
            <div className="flex flex-col gap-3">
              <Link
                to="/"
                className="nav-link"
                onClick={() => setIsMobileMenuOpen(false)}
              >
                Home
              </Link>
              <Link
                to="/cart"
                className="nav-link"
                onClick={() => setIsMobileMenuOpen(false)}
              >
                Cart ({getItemCount()})
              </Link>
            </div>
          </div>
        )}
      </div>

      {/* Navigation bar */}
      <div className="bg-neutral-50 dark:bg-neutral-800 border-t border-neutral-200 dark:border-neutral-700">
        <div className="container mx-auto px-4 lg:px-6 py-3">
          <div className="flex items-center gap-6 text-sm overflow-x-auto">
            <Link to="/category/clothing" className="nav-link whitespace-nowrap">
              Clothing
            </Link>
            <Link to="/category/electronics" className="nav-link whitespace-nowrap">
              Electronics
            </Link>
            <Link to="/category/jewellery" className="nav-link whitespace-nowrap">
              Jewellery
            </Link>
            <Link to="/category/home-kitchen" className="nav-link whitespace-nowrap">
              Home & Kitchen
            </Link>
            <span className="text-primary-600 font-medium whitespace-nowrap">
              Today's Deals
            </span>
          </div>
        </div>
      </div>
    </header>
  );
};

export default Header;

