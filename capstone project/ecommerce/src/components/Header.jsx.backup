            >
              <option value="">All</option>
              {Object.keys(categories).map(categoryKey => (
                <option key={categoryKey} value={categoryKey}>
                  {categories[categoryKey].name}
                </option>
              ))}
            </select>
            <input
              type="text"
              placeholder="Search Amazon"
              value={searchTerm}
              onChange={(e) => setSearchTerm(e.target.value)}
              className="flex-1 px-3 py-2 border-t border-b border-r border-gray-300 dark:border-gray-600 focus:outline-none dark:bg-gray-700 dark:text-white text-sm"
            />
            <button
              type="submit"
              className="px-3 py-2 bg-orange-400 hover:bg-orange-500 text-black rounded-r-md"
            >
              <Search size={18} />
            </button>
          </div>
        </form>

        {/* Mobile Menu */}
        {showMobileMenu && (
          <div className="md:hidden mt-3 py-3 border-t border-gray-200 dark:border-gray-700">
            <div className="flex flex-col gap-3">
              <Link to="/account" className="flex items-center gap-2 text-sm hover:underline">
                <User size={16} />
                Your Account
              </Link>
              <Link to="/orders" className="text-sm hover:underline">
                Your Orders
              </Link>
              <Link to="/cart" className="flex items-center gap-2 text-sm hover:underline">
                <ShoppingCart size={16} />
                Cart ({getItemCount()})
              </Link>
            </div>
          </div>
        )}
      </div>

      {/* Navigation bar */}
      <div className="bg-gray-100 dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700">
        <div className="container mx-auto px-4 py-2">
          <div className="flex items-center gap-6 text-sm">
            <button className="flex items-center gap-2 hover:underline">
              <Menu size={16} />
              All
            </button>
            <Link to="/category/clothing" className="hover:underline">Clothing</Link>
            <Link to="/category/electronics" className="hover:underline">Electronics</Link>
            <Link to="/category/jewellery" className="hover:underline">Jewellery</Link>
            <Link to="/category/home-kitchen" className="hover:underline">Home & Kitchen</Link>
            <span className="text-orange-600 font-medium">Today's Deals</span>
          </div>
        </div>
      </div>
    </header>
  );
};

export default Header;